<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doan_android_2021">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Doan_android_2021.NoActionBar">
        <activity android:name=".screens.search.SearchActivity"></activity>
        <activity android:name=".screens.order_detail.OrderDetailActivity" />
        <activity android:name=".screens.order.OrderActivity" />
        <activity android:name=".screens.brand.BrandActivity" />
        <activity android:name=".screens.register.RegisterActivity" />
        <activity android:name=".screens.login.LoginActivity" />
        <activity android:name=".screens.cart.CartActivity" />
        <activity android:name=".screens.detail.DetailActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>